{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ESNext",
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "../dist/test",
    "resolveJsonModule": true,  
    "sourceMap": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["../src/**/*", "**/*.ts"]
}